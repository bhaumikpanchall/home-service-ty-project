    <div class="container">
      <div class="row">
        <div class="col-md-8 col-sm-8 col-xs-12">
          <div class="booking_form">
            <div class="container-fluid">
              <div class="row">
                <form method="post" action="/login">
                  <br />
                  <h2>Login Form</h2>

                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <h4>UserName</h4>
                    <input
                      type="email"
                      id="form2Example1"
                      class="form-control"
                      name="Email_id"
                    />
                  </div>

                  <!-- Password input -->
                  <div class="form-outline mb-4">
                    <h4>Password</h4>
                    <input
                      type="password"
                      id="form2Example2"
                      class="form-control"
                      name="Password"
                    />
                  </div>

                  <!-- 2 column grid layout for inline styling -->
                  <div class="col mb-4">
                    <div class="col d-flex justify-content-center">
                      <!-- Checkbox -->
                      <div class="form-check">
                        &nbsp;&nbsp;<input
                          type="checkbox"
                          value=""
                          id="form2Example31"
                        />
                        <div style="position: absolute; top: 70%; left: 6%">
                          <label> Remember me </label>
                        </div>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div style="position: absolute; top: 70%; left: 20%">
                          <a href="#!">Forgot password?</a>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <input
                      class="btn btn-primary btn-block mb-4"
                      value="Sign in"
                      style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                      "
                      type="submit"
                    />
                  </div>

                  <!-- Submit button 
                  <button
                    type="button"
                    class="btn btn-primary btn-block mb-4"
                    style="
                      background-color: rgb(4, 196, 199);
                      border-color: rgb(8, 196, 199);
                    "
                  >
                    Sign in
                  </button> -->

                  <!-- Register buttons -->
                  <div class="text-center">
                    <p>Not a member? <a href="/register">Register</a></p>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
