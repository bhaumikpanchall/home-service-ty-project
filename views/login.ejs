<%- include('./utils/header'); -%>
  <div id="wrapper" class="home_two inner_page contacts_page">
    <!--Wrapper Start-->
    <!--Header Section Start-->

    <!--/Header Section End-->
    <!--Page Title Section Satrt-->
    <div id="page_title">
      <div class="container text-center">
        <div class="panel-heading">Login Us</div>
      </div>
    </div>
    <!--Page Title Section End-->

    <!--Contacts Section Satrt-->
    <!--Contacts Section End-->

    <!--Contact Form Start-->
    <section id="Contact_form">
      <div class="container">
        <% if(message.response) { %>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%=message.response %>
          </div>
          <% } %>
            <% if(message.success) { %>
              <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <%=message.success %>
              </div>
              <% } %>
                <div class="row">
                  <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="booking_form">
                      <div class="container-fluid">
                        <div class="row">
                          <form id="form1" method="post" action="/login">
                            <br />
                            <h2>Login Form</h2>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                              <h4>UserName</h4>
                              <input type="email" id="Email_id" class="form-control" name="Email_id" <% if(typeof data
                                !="undefined" ){%>
                              value="<%=data.email%>"
                                <%}%> />
                                  <label for="Email_id" class="error"></label>

                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                              <h4>Password</h4>
                              <input type="password" id="Password" class="form-control" name="Password" <% if(typeof
                                data !="undefined" ){%>
                              value="<%=data.password%>"
                                <%}%> />
                                  <label for="Password" class="error"></label>

                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="col mb-4">
                              <div class="col d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check">
                                  &nbsp;&nbsp;<input type="checkbox" name="rememberme" id="form2Example31" />
                                  <div style="position: absolute; top: 71%; left: 6%">
                                    <label> Remember me </label>
                                  </div>
                                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                  <div style="position: absolute; top: 71%; left: 20%">
                                    <a href="/forgotpassword">Forgot password?</a>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                              <input class="btn btn-primary btn-block mb-4" value="Sign in" style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                      " type="submit" />
                            </div>
                            <div style="position: absolute; top: 93%; left: 15%">
                              <p>Not a member? <a href="/register">Register</a></p>
                            </div>
                            <!-- Submit button 
                  <button
                    type="button"
                    class="btn btn-primary btn-block mb-4"
                    style="
                      background-color: rgb(4, 196, 199);
                      border-color: rgb(8, 196, 199);
                    "
                  >
                    Sign in
                  </button> -->

                            <!-- Register buttons -->

                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="about_info">
                      <br />
                      <h2>Contact info</h2>
                      <p>
                        <i class="fa fa-map-marker" aria-hidden="true"></i> Ahmedabad, Gujarat
                      </p>
                      <p>
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        quickfix.info.00@gmail.com
                      </p>
                      <p><i class="fa fa-phone" aria-hidden="true"></i> +917622899781</p>
                    </div>
                  </div>
                </div>
      </div>
    </section>
    <!--Contact Form End-->
    <%- include('./utils/footer'); -%>
  </div>
