<%- include('./utils/header'); -%>
    <div id="wrapper" class="inner_page home_two booking_page">
        <!--Wrapper Start-->
        <!--Page Title Section Satrt-->
        <div id="page_title">
            <div class="container text-center">
                <div class="panel-heading">book now
                </div>

            </div>
        </div>
        <!--Page Title Section End-->

        <!--Contact Information Start-->
        <section id="contact_information">
            <div class="container">
                <div class="row">
                    <!--Left Form Part-->
                    <form action="/bookorder" method="post">
                        <div class="col-md-7 col-sm-8 col-xs-12">

                            <!--Contact Information-->
                            <div class="contact_information_left ">
                                <!-- HTML Form (wrapped in a .bootstrap-iso div) -->
                                <div class="booking_form">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <input type="hidden" name="userId" value="<%=userData.id%>" />
                                            <input type="hidden" name="categoryId" value="<%=data.id%>" />
                                            <input type="hidden" name="visitingCharge"
                                                value="<%=data.visiting_charge%>" />
                                            <input type="hidden" name="pricePerHour" value=<%=data.charge_perhour%>" />

                                            <h2>Selected Service</h2>
                                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                                <input class="form-control" value="<%=data.category%>"
                                                    placeholder="Service" type="text" disabled />
                                            </div>
                                            <h2>Contact Information</h2>
                                            <p>This information will be used to contact you about your service</p>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                <input class="form-control" id="name" name="name"
                                                    placeholder="First Name" type="text" value="<%=userData.Fname%>"
                                                    disabled />
                                            </div>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12 padding-r">
                                                <input class="form-control" id="name1" name="name1"
                                                    placeholder="Last Name" type="text" value="<%=userData.Lname%>"
                                                    disabled />
                                            </div>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                <input class="form-control" id="email" name="email" placeholder="Email*"
                                                    type="text" value="<%=userData.Email_id%>" disabled />
                                            </div>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12 padding-r">
                                                <input class="form-control" id="tel" name="tel"
                                                    placeholder="Phone Number*" type="text"
                                                    value="<%=userData.Mobile_no%>" disabled />
                                            </div>
                                            <div class="clearfix"></div>
                                            <hr />
                                            <!--Service Address-->
                                            <h2>Service Address</h2>
                                            <p>Where would you like us to reach?</p>
                                            <div class="form-group col-md-12 col-sm-12 col-xs-12 ">
                                                <input class="form-control" id="address" name="address"
                                                    placeholder="Address*" type="text" value="<%=userData.Address%>"
                                                    disabled />
                                            </div>
                                            <div class="clearfix"></div>
                                            <!--Select Date Time-->
                                            <h2>When would you like us to come?</h2>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                <div class='input-group date' id='datetimepicker1'>
                                                    <input type='text' class="form-control" name="date" required />
                                                    <span class="input-group-addon"> <span
                                                            class="glyphicon glyphicon-calendar"></span> </span>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                <label for="exampleFormControlSelect1">Select hours</label>
                                                <div class='input-group date'>
                                                    <select class="form-control" name="hours" id="hours"
                                                        onchange="calculateTotal()" required>
                                                        <option value="">0</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                        <option value="5">5</option>
                                                        <option value="6">6</option>
                                                        <option value="7">7</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <!--BOOK NOW-->
                                            <div class="booking_summary hidden-lg  hidden-md hidden-sm">
                                                <h1>Booking Summary</h1>
                                                <div class="subtotal">
                                                    <% const imagePath=data.cat_image.slice(6); %>
                                                        <div class="heading text-left">
                                                            <img src="<%=imagePath%>" alt="<%=data.category%>"
                                                                height="35" style="padding-left: 30px;" />
                                                        </div>
                                                        <div class="price text-right">
                                                            <%=data.category%> Service
                                                        </div>
                                                </div>
                                                <div class="subtotal">
                                                    <div class="heading text-left">VISITING CHARGE</div>
                                                    <div class="price text-right">₹ <%=data.visiting_charge%>
                                                    </div>
                                                </div>
                                                <div class="price_totle">
                                                    <div class="subtotal">
                                                        <div class="heading text-left">CHARGE PER HOUR</div>
                                                        <div class="price text-right">₹ <%=data.charge_perhour%>
                                                        </div>
                                                    </div>
                                                    <div class="subtotal">
                                                        <div class="heading text-left">TOTAL HOURS</div>
                                                        <div class="price text-right" id="setHours1">0
                                                        </div>
                                                    </div>
                                                    <div class="subtotal">
                                                        <div class="heading text-left">TOTAL:</div>
                                                        <div class="price text-right">₹ <span id="total1">0</span></div>
                                                    </div>
                                                    <button class="btn btn-lg btn-primary btn-skin" type="submit">
                                                        BOOK NOW</button>
                                                </div>
                                            </div>
                                            <p>By clicking the Book Now button you are agreeing to our Terms of Service
                                                and Privacy Policy.</p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Contact Information-->

                        </div>
                        <!--/Left Form Part-->

                        <div class="col-md-5 col-sm-4 col-xs-12">
                            <div class="contact_information_right text-center">
                                <div class="booking_summary hidden-xs">
                                    <h1>Booking Summary</h1>
                                    <div class="subtotal">
                                        <% const imagePath1=data.cat_image.slice(6); %>
                                            <div class="heading text-left">
                                                <img src="<%=imagePath1%>" alt="<%=data.category%>" height="35"
                                                    style="padding-left: 30px;" />
                                            </div>
                                            <div class="price text-right">
                                                <%=data.category%> Service
                                            </div>
                                    </div>
                                    <div class="subtotal">
                                        <div class="heading text-left">VISITING CHARGE</div>
                                        <div class="price text-right">₹ <%=data.visiting_charge%>
                                        </div>
                                    </div>
                                    <div class="price_totle">
                                        <div class="subtotal">
                                            <div class="heading text-left">CHARGE PER HOUR</div>
                                            <div class="price text-right">₹ <%=data.charge_perhour%>
                                            </div>
                                        </div>
                                        <div class="subtotal">
                                            <div class="heading text-left">TOTAL HOURS</div>
                                            <div class="price text-right" id="setHours">0
                                            </div>
                                        </div>
                                        <div class="subtotal">
                                            <div class="heading text-left">TOTAL:</div>
                                            <div class="price text-right">₹<span id="total">0</span></div>
                                        </div>
                                        <button class="btn btn-lg btn-primary btn-skin" type="submit">
                                            BOOK NOW</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <!--Contact Information End-->
        <%- include('./utils/footer'); -%>
    </div>
    <!--/Wrapper End-->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/datetime/moment.js"></script>
    <script src="/js/datetime/bootstrap-datetimepicker.min.js"></script>
    <script src="/js/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/custom.js"></script>
    <script type="application/javascript">
        $(document).ready(function () {

            $(function () {
                $('#datetimepicker1').datetimepicker({ format: 'DD/MM/YYYY' });
            });

            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'LT'
                });
            });

        });
    </script>
    <script>
        const calculateTotal = () => {
            const visitingCharge = +'<%=data.visiting_charge%>';
            const chargePerHour = +'<%=data.charge_perhour%>';
            const e = document.getElementById("hours");
            const hours = +e.options[e.selectedIndex].value;
            const total = (hours * chargePerHour) + visitingCharge;
            document.getElementById("setHours").innerText = hours;
            document.getElementById("total").innerText = total;
            document.getElementById("setHours1").innerText = hours;
            document.getElementById("total1").innerText = total;
            console.log(total);
        }
    </script>
