                <div id="col-lg-6">
                    <h1>Give your valuable feedback</h1>
                    <form method="post" action="/addfeedback" style="width: 70%; ">
                        <input type="hidden" name="Booking_id" value="<%=id%>" />
                        <div class="input-group">
                            <textarea class="form-control" rows="6" cols="600" name="message"
                                placeholder="Write yout feedback"></textarea>
                        </div>

                        <div class="form-group ">
                            <input class="btn btn-primary btn-skin" value="Send feedback" style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                        margin-top: 20px;
                      " type="submit" />
                        </div>

                    </form>
                </div>
            </div>
        </section>
        <div style="padding-top: 100px;">
            <%- include('./utils/footer'); -%>
        </div>
    </div>
