<%- include('./header'); -%> <%- include('./script'); -%>

    <div id="wrapper">
      <%- include('./navbar'); -%> <%- include('./sidenav'); -%>

          <div id="page-wrapper">
            <% if(message.response) { %>
              <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <%=message.response %>
              </div>
              <% } %>
                <div>
                  <h1>All Service</h1>

                  <table class="table">
                    <tr>
                      <th scope="col">S.No</th>
                      <th scope="col">Service Name</th>
                      <th scope="col">Visiting Charge</th>
                      <th scope="col" style="width: 550px;">Description</th>
                      <th scope="col">Image</th>
                      <th scope="col">Action</th>
                    </tr>

                    <tbody>
                      <% data.forEach(element=> {%>

                        <tr>
                          <td>
                            <%=element.id%>
                          </td>
                          <td>
                            <%=element.category%>
                          </td>
                          <td>
                            <%=element.visiting_charge%>
                          </td>
                          <td>
                            <%=element.description%>
                          </td>
                          <% const imagePath=element.cat_image.slice(6); %>
                            <td><img src="<%=imagePath%>" width="50" height="50" /></td>
                            <td>
                              <a href="/admin/category/edit/<%=element.dataValues.id%>">
                                <button class="edit btn btn-sm btn-primary">Edit</button>
                                <a />
                                <a href="/admin/category/delete/<%=element.dataValues.id%>">
                                  <button class="delete btn btn-sm btn-primary">Delete</button>
                                </a>
                            </td>
                        </tr>

                        <% }) %>
                    </tbody>
                  </table>
                </div>

                <!-- /.row -->
          </div>
    </div>

    <<%- include('./footer'); -%>