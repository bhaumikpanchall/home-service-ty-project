<%- include('./header'); -%> <%- include('./script'); -%>

    <div id="wrapper">
      <%- include('./navbar'); -%> <%- include('./sidenav'); -%>

          <div id="page-wrapper">
            <form id="form1" method="post" action="/admin/category/add" enctype="multipart/form-data">
              <br /><br />
              <% if(message.response || message.error) { %>
                <div class="alert alert-warning alert-dismissible" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <%=message.response || message.error%>
                </div>
                <% } %>
                  <h2>&nbsp;&nbsp;Add Service</h2>
                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <h4>Service Name</h4>
                    <input class="form-control" id="category" name="category" placeholder="Service Name" type="text" />
                  </div>

                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <h4>Choose Image</h4>
                    <input class="form-control" type="file" id="categoryImage" name="categoryImage"
                      placeholder="Choose Image" required />
                  </div>


                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <h4>Visiting Charge</h4>
                    <input class="form-control" id="visiting_charge" name="visiting_charge"
                      placeholder="Visiting Charge" type="text" />
                  </div>

                  <div class="form-group col-md-20 col-sm-12 col-xs-12">
                    <div class="input-group">
                      <h4>Write Your Description</h4>
                      <textarea id="description" class="form-control" rows="5" cols="50"
                        placeholder="Write Your Description" name="description"></textarea>
                    </div>
                  </div>

                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <input class="btn btn-primary btn-skin" value="Submit" style="
            background-color: rgb(4, 196, 199);
            border-color: rgb(8, 196, 199);
          " type="submit" />
                  </div>
            </form>

            <!-- /.row -->
          </div>
    </div>

    <%- include('./footer'); -%>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.js
    "></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js
    "></script>
      <script>
        jQuery("#form1").validate({
          rules: {
            category: {
              required: true,
            },
            categoryImage: {
              required: true,
            },
            visiting_charge: {
              required: true,
            },
            description: {
              required: true,
            },
          },
          submitHandler: function (form) {
            form.submit();
          },
        });
      </script>