<%- include('header'); -%>
    <div id="wrapper" class="home_two">
        <div id="page_title">
            <div class="container text-center">
                <div class="panel-heading">Edit Profile</div>
            </div>
        </div>
        <section id="Contact_form">
            <div style=" padding-top : 10;">
                <!-- Sidebar-->
                <div class="col-lg-3 sidebar-wrapper" style="min-height: 100vh;">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item" style="font-size: 22px; background-color: lightgray;">Settings</a>
                        <a class="list-group-item" href="/serviceprovider/myprofile">Account Details</a>
                        <a class="list-group-item" href="/serviceprovider/editprofile"
                            style="background-color: rgb(240, 235, 235);">Edit Profile</a>
                        <a class="list-group-item" href="/serviceprovider/feedbacks">Feedbacks</a>
                        <a class="list-group-item" href="/serviceprovider/changepassword">Change Password</a>
                        <a class="list-group-item" href="/logout">Logout</a>
                    </div>
                </div>
                <!-- Page content wrapper-->
                <div id="col-lg-8">
                    <div class="booking_form">
                        <div class="container-fluid">
                            <div class="row">
                                <form method="post" action="/serviceprovider/editprofile">
                                    <input type="hidden" name="id" value="<%=userData.id%>" />
                                    <% const imagePath=userData.Profile_image.slice(6); %>
                                        <div class="">

                                            <div class="col-lg-6">
                                                <h4>First Name</h4>
                                                <input class="form-control" id="name" name="Fname"
                                                    placeholder="Full Name" type="text" value="<%=userData.Fname%>" />
                                                <h4>Last Name</h4>
                                                <input class="form-control" id="name" name="Lname"
                                                    placeholder="Last Name" type="text" value="<%=userData.Lname%>" />
                                            </div>

                                            <div class="col-lg-2" style="padding-top: 25px;">
                                                <img class="img-circle" src="<%=imagePath%>" height="140" width="140"
                                                    alt="profile image" />
                                            </div>
                                        </div>

                                        <div class="col-md-8" style="padding-left: 15px;">
                                            <h4>Email</h4>
                                            <input class="form-control" id="Email" name="Email_id" placeholder="Email"
                                                type="text" value="<%=userData.Email_id%>" disabled />

                                            <h4>Mobile Number</h4>
                                            <input class="form-control" id="Mobile_number" name="Mobile_no"
                                                placeholder="Mobile Number" value="<%=userData.Mobile_no%>"
                                                type="text" />


                                            <h4>Select City</h4>
                                            <select class="form-control" name="City_id" id="city">
                                                <% data.forEach(element=> {%>
                                                    <option value="<%=element.id%>"
                                                        <%if(userData.City.id==element.id){%>
                                                        Selected
                                                        <%}%>
                                                            >
                                                            <%=element.City_name%>
                                                    </option>
                                                    <%})%>
                                            </select>

                                            <div class="input-group">
                                                <h4>Address</h4>
                                                <textarea class="form-control" name="Address" rows="4"
                                                    placeholder="Address"><%=userData.Address%></textarea>
                                            </div>
                                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                <input class="btn btn-primary btn-skin" value="Update Profile" style="
                                              background-color: rgb(4, 196, 199);
                                              border-color: rgb(8, 196, 199);
                                              color: white;
                                              margin-top: 20px;
                                            " type="submit" />
                                            </div>
                                        </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../utils/footer'); -%>
    </div>
    <!--Contact Form End-->



