<%- include('header'); -%>
  <div id="wrapper" class="inner_page contacts_page">
    <!--Wrapper Start-->
    <!--Header Section Start-->

    <!--/Header Section End-->
    <!--Page Title Section Satrt-->
    <div id="page_title">
      <div class="container text-center">
        <div class="panel-heading">Service Provider Details </div>
      </div>
    </div>
    <!--Page Title Section End-->

    <!--Contacts Section Satrt-->
    <!--Contacts Section End-->

    <!--Contact Form Start-->
    <section id="Contact_form">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-sm-8 col-xs-12">
            <div class="booking_form">
              <div class="container-fluid">
                <div class="row">
                  <form method="post" action="/serviceprovider/add" enctype="multipart/form-data">
                    <br />
                    <% if(message.response || message.error) { %>
                      <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                        <%=message.response || message.error%>
                      </div>
                      <% } %>
                        <h2>Service Provider Details</h2>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>First Name</h4>
                          <input class="form-control" id="name" name="Fname" value="<%=userData.Fname%>"
                            placeholder="First Name" type="text" disabled />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Last Name</h4>
                          <input class="form-control" id="name" name="Lname" value="<%=userData.Lname%>"
                            placeholder="Last Name" type="text" disabled />
                        </div>


                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Work Experience(in year)</h4>
                          <input class="form-control" id="Experience" name="Experience" placeholder="Experience"
                            type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Date of Birth</h4>
                          <input class="form-control" id="DOB" name="DOB" placeholder="DOB" type="date" />
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Select Your Category</h4>

                          <select class="form-control" name="Category_id" id="Category">

                            <% data.forEach(element=> {%>
                              <option value="<%=element.id%>">
                                <%=element.category%>
                              </option>
                              <%})%>
                          </select>
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Type of Document</h4>

                          <select class="form-control" name="Document_name" id="Document">

                            <option value="Adhar Card">Adhar Card</option>
                            <option value="Driving Licence">Driving Licence</option>
                            <option value="Pan Card">Pan Card</option>
                          </select>
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Document Image</h4>
                          <input class="form-control" type="file" id="img" name="Document_image" accept="image/*"
                            placeholder="Choose Image" />
                        </div>

                        <div class="form-group col-md-10 col-sm-6 col-xs-12">
                          <input class="btn btn-primary btn-skin" value="Submit" style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                      " type="submit" />
                        </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="about_info">
              <br />
              <h2>Contact info</h2>
              <p>
                <i class="fa fa-map-marker" aria-hidden="true"></i> Lorem Ipsum is
                simply dummy
              </p>
              <p>
                <i class="fa fa-envelope" aria-hidden="true"></i>
                info@quickfix.com
              </p>
              <p><i class="fa fa-phone" aria-hidden="true"></i> +91807186985</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--Contact Form End-->

    <!--Footer-->

    <!--/Footer-->
  </div>
  <!--/Wrapper End-->

