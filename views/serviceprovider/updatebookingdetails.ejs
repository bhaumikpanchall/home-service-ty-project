<%- include('header'); -%>
    <div id="wrapper" class="inner_page home_two contacts_page">

        <section id="Contact_form">

            <div class="container ">
                <div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <h2>Update Details</h2>
                    </div>
                </div>
                <form method="post" action="/serviceprovider/update">
                    <table class="table">
                        <input type="hidden" name="orderId" value="<%=data[0]?.id%>" />
                        <tr>
                            <th>Total Amount</th>
                            <td>
                                <input type="text" class="form-control" name="totalAmount"
                                    value="<%=data[0]?.Total_Amount%>" style="color: black;" required />
                            </td>
                        </tr>
                        <tr>
                            <th>Booking Status</th>
                            <td>
                                <select class="form-control" name="bookingStatus" style="color: black;" required>
                                    <option value="2" <%if(data[0]?.Booking_status=="Confirmed" ){%>
                                        selected<%}%>>Confirmed
                                    </option>
                                    <option value="3" <%if(data[0]?.Booking_status=="InProgress" ){%>
                                        selected<%}%>>InProgress
                                    </option>
                                    <option value="5" <%if(data[0]?.Booking_status=="Completed" ){%>
                                        selected<%}%>>Completed
                                    </option>
                                    <option value="4" <%if(data[0]?.Booking_status=="Cancel" ){%>
                                        selected<%}%>>Cancel
                                    </option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th>Payment Status</th>
                            <td>
                                <select class="form-control" name="paymentStatus" style="color: black;" required>
                                    <option value="1" <%if(data[0]?.Payment_status=="Pending" ){%>
                                        selected<%}%>>Pending
                                    </option>
                                    <option value="2" <%if(data[0]?.Payment_status=="Paid" ){%>
                                        selected<%}%>>Paid
                                    </option>
                                </select>
                            </td>
                        </tr>

                        <tr>
                            <th></th>
                            <td>
                                <input type="submit" value="Update" class="btn btn-primary" style="
                            background-color: rgb(4, 196, 199);
                            border-color: rgb(8, 196, 199);
                            color: white;
                          ">
                            </td>
                        </tr>
                        <tbody>


                            <!-- <td>
                      <button class="edit btn btn-sm btn-primary">Edit</button>
                      <button class="delete btn btn-sm btn-primary">Delete</button>
                    </td> -->
                        </tbody>
                    </table>
                </form>
            </div>

        </section>
        <!--Contact Form End-->

        <!--Footer-->
        <%- include('footer'); -%>
            <!--/Footer-->

    </div>
    <!--/Wrapper End-->

