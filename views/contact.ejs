    <!--Page Title Section End-->

    <!--Contacts Section Satrt-->
    <!--Contacts Section End-->

    <!--Contact Form Start-->
    <section id="Contact_form">
      <div class="contacts_mape">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3670.2958991767123!2d72.54715401428372!3d23.08626151973952!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e838df0d1cc75%3A0x5fe18a73f47bef92!2sHotchpotz%20-%20Web%20%26%20App%20Development%2C%20Graphic%20Design%2C%20Digital%20Marketing%20Agency!5e0!3m2!1sen!2sin!4v1679503309078!5m2!1sen!2sin"
          width="1600" height="490" allowfullscreen></iframe>
      </div>

      <div class="container">
        <% if(message.response) { %>
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%=message.response %>
          </div>
          <% } %>
            <div class="row">
              <div class="col-md-8 col-sm-8 col-xs-12">
                <div class="booking_form">
                  <div class="container-fluid">
                    <div class="row">
                      <form id="form1" method="post" action="/contact">
                        <h2>Contact Form</h2>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input class="form-control" id="Name" name="Name" placeholder="Full Name" type="text" />
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input type="email" class="form-control" id="Email" name="Email" placeholder="Email"
                            type="text" />
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input class="form-control" id="Subject" name="Subject" placeholder="Subject*" type="text" />
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input class="form-control" id="Mobile_no" name="Mobile_no" placeholder="Phone Number"
                            type="text" />
                        </div>
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                          <div class="input-group">
                            <textarea class="form-control" rows="6" id="Message" name="Message"
                              placeholder="Message"></textarea>
                          </div>
                        </div>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input class="btn btn-primary btn-skin" value="Submit" style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                      " type="submit" />
                        </div>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="about_info">
                  <h2>Contact info</h2>
                  <p>
                    <i class="fa fa-map-marker" aria-hidden="true"></i> Ahmedabad, Gujarat
                  </p>
                  <p>
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    quickfix.info.00@gmail.com
                  </p>
                  <p><i class="fa fa-phone" aria-hidden="true"></i> +917622899781 </p>
                </div>
              </div>
            </div>
      </div>

    </section>
    <%- include('./utils/footer'); -%>
  </div>
