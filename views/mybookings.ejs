<%- include('./utils/header'); -%>
    <div id="wrapper" class="home_two">
        <div id="page_title">
            <div class="container text-center">
                <div class="panel-heading">My Orders
                </div>
            </div>
        </div>
        <section id="Contact_form">
            <div style=" padding-top : 10;">
                <!-- Sidebar-->
                <div class="col-lg-3 sidebar-wrapper">
                    <div class=" list-group list-group-flush">
                        <a class="list-group-item" style="font-size: 22px; background-color: lightgray;">Settings</a>
                        <a class="list-group-item" href="/profile">Account
                            Details</a>
                        <a class="list-group-item" href="/editprofile">Edit Profile</a>
                        <a class="list-group-item" href="/orders" style="background-color: rgb(240, 235, 235);">My
                            Orders</a>
                        <a class="list-group-item" href="/feedbacks">Feedbacks</a>
                        <a class="list-group-item" href="/changepassword">Change Password</a>
                        <a class="list-group-item" href="/logout">Logout</a>
                    </div>
                </div>
                <!-- Page content wrapper-->
                <div id="col-lg-6">
                    <h1>My Orders</h1>
                    <table class="table" style="width: 70%; ">

                        <tr>
                            <th scope="col">Service Provider </th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Booking Date</th>
                            <th scope="col">Total Amount</th>
                            <th scope="col">Booking status</th>
                            <th scope="col">Payment Status</th>
                            <th scope="col">Payment Type</th>

                        </tr>

                        <tbody>
                            <%if(data.length==0) { %>
                                <tr>
                                    <td colspan="7" style="text-align: center;">
                                        No orders found
                                    </td>
                                </tr>
                                <%}%>
                                    <% data?.forEach((item)=>{ %>
                                        <tr>
                                            <td>
                                                <%if(item.ServiceProvider) {%>
                                                    <b>
                                                        <%= item.ServiceProvider?.Username?.Fname %>
                                                            <%= item.ServiceProvider?.Username?.Lname %>
                                                    </b>
                                                    <p>
                                                        <%=item.ServiceProvider?.Username.Email_id%>
                                                            <%=item.ServiceProvider?.Username.Mobile_no%>
                                                    </p>
                                                    <%}else{%>
                                                        <b>Not Assigned yet</b>
                                                        <%}%>
                                            </td>
                                            <td>
                                                <%= item.Category_Booking.category%>
                                            </td>
                                            <td>
                                                <%= item.Booking_date%>
                                            </td>
                                            <td>
                                                <%= item.Total_Amount%>
                                            </td>
                                            <td>
                                                <%= item.Booking_status %>
                                            </td>
                                            <td>
                                                <%= item.Payment_status %>
                                                    <%if(item.Payment_status=="Paid"){%>
                                                        <p><a href="/feedback/<%=item.id%>">Write your feedback</a></p>
                                                        <% }%>
                                            </td>
                                            <td>
                                                <%= item.Payment_Type %>
                                            </td>

                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <div style="padding-top: 170px;">
            <%- include('./utils/footer'); -%>
        </div>
    </div>
    <!--Contact Form End-->

    <!--/Wrapper End-->

