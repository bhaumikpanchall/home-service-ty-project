<%- include('./utils/header'); -%>
    <style>
        .step {
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #837f7f;
            border: none;
            border-radius: 50%;
            display: inline-block;
            opacity: 0.3;
        }

        .step-active {
            opacity: 1;
        }
    </style>
    <div id="wrapper" class="home_two inner_page contacts_page">
        <!--Wrapper Start-->
        <!--Header Section Start-->

        <!--/Header Section End-->
        <!--Page Title Section Satrt-->
        <div id="page_title">
            <div class="container text-center">
                <div class="panel-heading">New Password</div>
            </div>
        </div>
        <!--Page Title Section End-->

        <!--Contacts Section Satrt-->
        <!--Contacts Section End-->

        <!--Contact Form Start-->
        <section id="Contact_form">

            <div class="container">
                <% if(message.response) { %>
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%=message.response %>
                    </div>
                    <% } %>
                        <% if(message.success) { %>
                            <div class="alert alert-success alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <%=message.success %>
                            </div>
                            <% } %>
                                <div class="row">
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <div class="booking_form">
                                            <div class="container-fluid">
                                                <div class="row">
                                                    <form method="post" action="/generate-newpassword">
                                                        <br />
                                                        <h2>Generate New Password</h2>
                                                        <input type="hidden" name="User_id"
                                                            value="<%=data?.User_id%>" />
                                                        <div class="form-outline mb-4">
                                                            <h4>New Password</h4>
                                                            <input type="text" id="form2Example1" class="form-control"
                                                                name="password" placeholder="Enter New password" />
                                                        </div>

                                                        <div class="form-outline mb-4">
                                                            <h4>Confirm New Password</h4>
                                                            <input type="text" id="form2Example1" class="form-control"
                                                                name="confirmPassword"
                                                                placeholder="Enter confirm new password" />
                                                        </div>

                                                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                                            <input class="btn btn-primary btn-block mb-4" value="Submit"
                                                                style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                        margin-top: 20px;
                      " type="submit" />
                                                        </div>

                                                    </form>
                                                </div>
                                                <div style="text-align:center;margin-top:40px;">
                                                    <span class="step"></span>
                                                    <span class="step"></span>
                                                    <span class="step  step-active"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <div class="about_info">
                                            <br />
                                            <h2>Contact info</h2>
                                            <p>
                                                <i class="fa fa-map-marker" aria-hidden="true"></i> Lorem Ipsum is
                                                simply dummy
                                            </p>
                                            <p>
                                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                                info@quickfix.com
                                            </p>
                                            <p><i class="fa fa-phone" aria-hidden="true"></i> +91807186985</p>
                                        </div>
                                    </div>
                                </div>
            </div>
        </section>
        <!--Contact Form End-->
        <%- include('./utils/footer'); -%>
    </div>
    <!--/Wrapper End-->

