    <!--Page Title Section Satrt-->
    <div id="page_title">
      <div class="container text-center">
        <div class="panel-heading">Register us</div>
      </div>
    </div>
    <!--Page Title Section End-->

    <!--Contacts Section Satrt-->
    <!--Contacts Section End-->

    <!--Contact Form Start-->
    <section id="Contact_form">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-sm-8 col-xs-12">
            <div class="booking_form">
              <div class="container-fluid">
                <div class="row">
                  <form method="post" action="/register/add" enctype="multipart/form-data">
                    <br />
                    <% if(message.response || message.error) { %>
                      <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                        <%=message.response || message.error%>
                      </div>
                      <% } %>
                        <h2>Register Form</h2>
                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>First Name</h4>
                          <input class="form-control" id="name" name="Fname" placeholder="Full Name" type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Last Name</h4>
                          <input class="form-control" id="name" name="Lname" placeholder="Last Name" type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Email</h4>
                          <input class="form-control" id="Email" name="Email_id" placeholder="Email" type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Password</h4>
                          <input class="form-control" id="Subject" name="Password" placeholder="Password" type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Mobile Number</h4>
                          <input class="form-control" id="Mobile_number" name="Mobile_no" placeholder="Mobile Number"
                            type="text" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Choose Image</h4>
                          <input class="form-control" type="file" id="img" name="Profile_image" accept="image/*"
                            placeholder="Choose Image" />
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <h4>Select City</h4>

                          <select class="form-control" name="City_id" id="city">
                            <% data.forEach(element=> {%>
                              <option value="<%=element.id%>">
                                <%=element.City_name%>
                              </option>
                              <%})%>
                                <!-- <option value="12">Surat</option>
                      <option value="14">Rajkot</option>
                      <option value="15">Vadodara</option> -->
                          </select>
                        </div>

                        <div class="form-group col-md-6 col-sm-5 col-xs-6">
                          <h4>Select User Type</h4>
                          <div class="form-control" type="text">
                            <div style="position: absolute; top: 40%">
                              <input type="radio" name="UserType" id="contactChoice1" value="User" />
                            </div>
                            <div style="position: absolute; top: 60%; left: 10%">
                              <label for="contactChoice1">User</label>
                            </div>

                            <div style="position: absolute; top: 40%; left: 25%">
                              <input type="radio" name="UserType" id="contactChoice1" value="ServiceMan" />
                            </div>
                            <div style="position: absolute; top: 60%; left: 30%">
                              <label for="contactChoice1">ServiceMan</label>
                            </div>
                          </div>
                        </div>

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                          <div class="input-group">
                            <h4>Address</h4>
                            <textarea class="form-control" name="Address" rows="6" placeholder="Address"></textarea>
                          </div>
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-12">
                          <input class="btn btn-primary btn-skin" value="Submit" style="
                        background-color: rgb(4, 196, 199);
                        border-color: rgb(8, 196, 199);
                        color: white;
                      " type="submit" />
                        </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="about_info">
              <br />
              <h2>Contact info</h2>
              <p>
                <i class="fa fa-map-marker" aria-hidden="true"></i> Lorem Ipsum is
                simply dummy
              </p>
              <p>
                <i class="fa fa-envelope" aria-hidden="true"></i>
                infor@example.com
              </p>
              <p><i class="fa fa-phone" aria-hidden="true"></i> +91807186985</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--Contact Form End-->

